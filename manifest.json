{
    "manifest_version": 3,
    "name": "Website Time Tracker",
    "version": "1.0",
    "description": "Tracks the time you spend on websites.",
    "options_page": "focus-settings.html",
    "permissions": ["activeTab", "tabs", "storage", "webRequest", "webRequestBlocking", "alarms"],
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "focus-settings.html",
        "open_in_tab": true
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            
        }
    },
    "host_permissions": ["<all_urls>"]
}